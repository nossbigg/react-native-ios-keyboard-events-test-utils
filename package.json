{
  "name": "events-server",
  "version": "0.0.0",
  "license": "MIT",
  "private": false,
  "author": "Cheng Gibson <chenggibson@gmail.com>",
  "scripts": {
    "start": "ts-node-dev --respawn src/events-server/start.ts",
    "test": "jest --watch",
    "test:once": "jest",
    "tslint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.{ts,tsx}'",
    "lint": "yarn tslint && yarn typecheck",
    "lint:fix": "prettier --write 'src/**/*.{ts,tsx}' && yarn tslint -- --fix && yarn typecheck",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "socket.io": "2.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "23.3.13",
    "@types/node": "13.7.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.0.0",
    "husky": "1.3.1",
    "jest": "24.8.0",
    "prettier": "1.19.0",
    "ts-jest": "23.10.5",
    "ts-node-dev": "1.0.0-pre.44",
    "tslint": "5.12.1",
    "typescript": "3.8.2"
  },
  "jest": {
    "clearMocks": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test:once"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
